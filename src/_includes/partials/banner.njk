{% if site.disclaimer %}
<section class="usa-banner" aria-label="Template project disclaimer" style="background-color: #fef0c8;">
  <div class="usa-accordion">
    <header class="usa-banner__header">
      <div class="usa-banner__inner">
        <div class="grid-col-auto">
          <svg class="usa-banner__header-flag" style="width: 20px; height: 20px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
        </div>
        <div class="grid-col-fill tablet:grid-col-auto" aria-hidden="true">
          <p class="usa-banner__header-text">This is an open source template project</p>
          <p class="usa-banner__header-action">Learn more about this template</p>
        </div>
        <button type="button" class="usa-accordion__button usa-banner__button" aria-expanded="false" aria-controls="template-banner">
          <span class="usa-banner__button-text">Learn more about this template</span>
        </button>
      </div>
    </header>
    <div class="usa-banner__content usa-accordion__content" id="template-banner">
      <div class="grid-row grid-gap-lg">
        <div class="usa-banner__guidance tablet:grid-col-12">
          <div class="usa-media-block__body">
            <p>
              <strong>Important Disclaimer:</strong><br>
              {{ site.disclaimer }}
            </p>
            <p>
              <strong>About this template:</strong><br>
              This template helps developers create websites that follow the U.S. Web Design System (USWDS) standards. It provides a starting point for building accessible, mobile-friendly government websites. The template is released under the CC0 license, making it free to use, modify, and distribute.
            </p>
            <p>
              <strong>View on GitHub:</strong> <a href="{{ site.github }}">{{ site.github }}</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}