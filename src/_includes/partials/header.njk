<div class="usa-overlay"></div>
<header class="usa-header usa-header--extended">
  <div class="usa-navbar">
    <div class="usa-logo">
      <em class="usa-logo__text">
        <a href="/" title="{{ site.title }}">{{ site.title }}</a>
      </em>
    </div>
    <button type="button" class="usa-menu-btn">Menu</button>
  </div>
  <nav aria-label="Primary navigation" class="usa-nav">
    <div class="usa-nav__inner">
      <button type="button" class="usa-nav__close">
        <img src="/assets/uswds/img/usa-icons/close.svg" role="img" alt="Close">
      </button>
      <ul class="usa-nav__primary usa-accordion">
        {% for item in site.navigation.primary %}
        <li class="usa-nav__primary-item">
          {% if item.children %}
          <button type="button" class="usa-accordion__button usa-nav__link {% if page.url.startsWith(item.href) %}usa-current{% endif %}" aria-expanded="false" aria-controls="extended-nav-section-{{ loop.index }}">
            <span>{{ item.text }}</span>
          </button>
          <ul id="extended-nav-section-{{ loop.index }}" class="usa-nav__submenu">
            {% for child in item.children %}
            <li class="usa-nav__submenu-item">
              <a href="{{ child.href }}">{{ child.text }}</a>
            </li>
            {% endfor %}
          </ul>
          {% else %}
          <a href="{{ item.href }}" class="usa-nav__link {% if page.url == item.href %}usa-current{% endif %}">
            <span>{{ item.text }}</span>
          </a>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
      <div class="usa-nav__secondary">
        <ul class="usa-nav__secondary-links">
          <li class="usa-nav__secondary-item">
            <a href="/contact/">Contact</a>
          </li>
        </ul>
        <section aria-label="Search component">
          <form class="usa-search usa-search--small" role="search" action="{{ site.search.endpoint }}" method="get">
            <input type="hidden" name="affiliate" value="{{ site.search.affiliate }}">
            <label class="usa-sr-only" for="search-field">Search</label>
            <input class="usa-input" id="search-field" type="search" name="query" required>
            <button class="usa-button" type="submit">
              <img src="/assets/uswds/img/usa-icons-bg/search--white.svg" class="usa-search__submit-icon" alt="Search">
            </button>
          </form>
        </section>
      </div>
    </div>
  </nav>
</header>